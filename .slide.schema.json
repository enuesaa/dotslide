{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": ["slides"],
  "properties": {
    "slides": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "cap": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "links": {
            "$ref": "#/definitions/links"
          },
          "files": {
            "$ref": "#/definitions/files"
          },
          "terminal": {
            "type": "string"
          },
          "image": {
            "type": "string"
          },
          "left": {
            "$ref": "#/definitions/unit"
          },
          "center": {
            "$ref": "#/definitions/unit"
          },
          "right": {
            "$ref": "#/definitions/unit"
          },
          "metaLeft": {
            "$ref": "#/definitions/unit"
          },
          "metaCenter": {
            "$ref": "#/definitions/unit"
          },
          "metaRight": {
            "$ref": "#/definitions/unit"
          }
        }
      }
    }
  },
  "definitions": {
    "unit": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "cap": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "links": {
          "$ref": "#/definitions/links"
        },
        "files": {
          "$ref": "#/definitions/files"
        },
        "terminal": {
          "type": "string"
        },
        "image": {
          "type": "string"
        }
      }
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title", "url"],
        "additionalProperties": false,
        "properties": {
          "title": {
            "type": "string"
          },
          "url": {
            "type": "string"
          }
        }
      }
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["filename", "code"],
        "additionalProperties": false,
        "properties": {
          "filename": {
            "type": "string"
          },
          "code": {
            "type": "string"
          }
        }
      }
    }
  }
